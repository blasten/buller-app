<% if @assignment.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <strong><%= pluralize(@assignment.errors.count, "error") %> prohibited
    this assigment from being saved:</strong>
  <ul>
  <% @assignment.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for @assignment do |f| %>  
  <div class="form-group">
    <label for="assignment_user_id"> Student </label>
    <%= f.select :user_id, options_for_select(@students.collect {|p| [ p.name, p.id ] }, @current_student),{ include_blank: true } %> 
  </div>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "Assignment name" %>
  </div>

  <div class="form-group">
    <%= f.label :score %>
    <%= f.text_field :score, :placeholder => "100", :class => "input-small" %>
  </div>
  

  <div class="form-group">
    <%= f.label :total %>
    <%= f.text_field :total, :placeholder => "100", :class => "input-small" %>
  </div>
  
  <%= f.submit  :class=> "btn btn-primary", :value => "Submit" %>

</form>
<% end %>
