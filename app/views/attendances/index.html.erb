<%- title "Attendance" %>

<%= bootstrap_flash %>

<% if signed_in? %>
<a class="btn btn-default pull-right" href="iam-here">
  <i class="fa fa-pencil-square-o"></i> 
  <b>Change seat</b>
</a>
<% end %>

<h3>Attendance for <%= @current_date.to_formatted_s(:long_ordinal) %></h3>

<div class="seats default-seats">
  <% for seat_number in 1..4 do %>
    <div class="seat">
      <% if @attendances.has_key?(seat_number) %>
          <% @attendances[seat_number].each do |attendance|  %>
            <div class="student-row">
              <a href="<%=user_path(attendance.user)%>" class="picture"><img src="<%= attendance.user.image_url %>" width="40" height="40"/></a>
              <a href="<%=user_path(attendance.user)%>" class="nickname">
                <%= attendance.user.nickname %>
              </a>
            </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<%= form_tag(attendances_path, method: :get, class: 'inline-form') do %>
  <label for="date">Date</label>
  <%= date_field_tag('date', @current_date) %>
<% end %>

<%= content_for :javascript do %>

<% end %>