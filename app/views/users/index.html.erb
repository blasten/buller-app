<%- title "Students" %>
<% active_tab :students %>
<%= bootstrap_flash %>

<h3>Registered students so far</h3>

<% unless @users.blank? %>
<table class="table table-striped">
  <% @users.each do |user|  %>
    <tr>
      <td style="vertical-align:middle"> 
        <a href="<%=user_path(user)%>"><img src="<%= user.image_url %>" width="80" height="80"/></a> 
      </td>
      <td style="vertical-align:middle"> <%= link_to user.name, user_path(user) %> </td>
      <td style="vertical-align:middle"> <%= link_to user.nickname, user_path(user) %></td>
      <td style="vertical-align:middle"> <%= link_to user.email, user_path(user) %></td>
    </tr>  
  <% end %>
</table>
<% else %>
  No student has been registered yet.
<% end %>
