<%- title "#{@user.name}" %>

<h3><%=@user.name%></h3>

<p>
  <%=@user.nickname%>
</p>

<p>
  <%=@user.email%>
</p>

<p>
  <img src="<%=@user.image_url%>" width="80" height="80"/>
</p>

<hr />

<p>
  <ul class="list-unstyled">
    <li>
      <i class="fa fa-calendar-o"></i> <a href="<%=attendance_path(@user)%>">Show <%=@user.name%>'s Attendance</a>
    </li>
    <li>
      <i class="fa fa-users"></i> <a href="<%=users_path%>">Students</a>
    </li>
  </ul>
</p>